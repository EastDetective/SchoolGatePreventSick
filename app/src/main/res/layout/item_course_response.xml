<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="15dp"
            app:cardUseCompatPadding="false"
            app:cardCornerRadius="10dp">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingBottom="10dp" android:paddingTop="15dp">

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_alignParentTop="true"
                      android:layout_alignParentLeft="true"
                      android:layout_alignParentStart="true"
                      android:text="UXXXXXXXX"
                      android:id="@+id/responseRow_idText"/>

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_alignParentTop="true"
                      android:layout_alignParentRight="true"
                      android:layout_alignParentEnd="true"
                      android:text="YYYY/MM/DD"
                      android:id="@+id/responseRow_dateText" android:textColor="@color/colorPrimary"/>

            <TextView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_below="@id/responseRow_idText"
                      android:layout_marginTop="15dp"
                      android:id="@+id/responseRow_editText"
                      android:text="文字文字文字文字文字文字文字文字文字文字文字文字文字文字文字文字文字文字"
                      android:maxLength="56"
                      android:background="@null"/>

            <Button android:layout_width="84dp"
                    android:layout_height="30dp"
                    android:layout_below="@id/responseRow_idText"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="35dp"
                    android:layout_marginBottom="5dp"
                    android:text="看更多"
                    android:id="@+id/responseRow_btn"
                    android:background="@drawable/radio_btn_checked"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

