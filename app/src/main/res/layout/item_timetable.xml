<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="70dp"

        android:paddingTop="5dp"
        android:paddingBottom="5dp">

    <com.example.cs.pushpull.extension.CircularTextView
            android:id="@+id/timetableRow_circular_tv"
            android:layout_width="9dp"
            android:layout_height="9dp"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:padding="3dp" android:layout_marginRight="20dp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nothing planned."
            android:layout_toRightOf="@+id/timetableRow_circular_tv"
            android:layout_centerVertical="true"
            android:id="@+id/timetableRow_class_name" android:textSize="15sp" android:textStyle="bold"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="xx/xx/xx"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:id="@+id/timetableRow_time" android:textSize="11sp"/>

</RelativeLayout>