<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".school.previous.response.ResponseSeeMoreFragment"
        android:paddingTop="30dp"
        android:paddingRight="20dp"
        android:paddingEnd="20dp"
        android:paddingLeft="30dp"
        android:paddingStart="30dp">

    <Button
            android:layout_width="300dp"
            android:layout_height="280dp"
            android:clickable="false"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerHorizontal="true"
            android:background="@color/offWhite"/>

    <RelativeLayout
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:elevation="3dp" android:paddingTop="15dp">

        <TextView android:layout_width="150dp"
                  android:layout_height="wrap_content"
                  android:text="U10500000"
                  android:layout_marginRight="50dp"
                  android:layout_marginEnd="50dp"
                  android:id="@+id/seeMoreResponseId" android:textColor="@color/slateGrey" android:textSize="17sp"
                  android:textStyle="bold"/>

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="2018/12/30"
                  android:id="@+id/seeMoreResponseDate"
                  android:layout_toRightOf="@id/seeMoreResponseId"
                  android:layout_toEndOf="@id/seeMoreResponseId" android:textSize="13sp"
                  android:layout_above="@id/seeMoreResponseText"/>

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_below="@id/seeMoreResponseId"
                  android:layout_marginTop="30dp"
                  android:id="@+id/seeMoreResponseText"
                  android:text="文字文字文字文字文字文字文字文字文字文字文字文字文字文字文字文字文字文字文字文字文字文字文字文字文字文字文字文字文字文字文字文字文字文字文字文字文字文字文字。"/>

    </RelativeLayout>

    <Button
            android:layout_width="250dp"
            android:layout_height="160dp"
            android:clickable="false"
            android:layout_marginLeft="110dp"
            android:layout_marginStart="110dp"
            android:layout_marginTop="240dp"
            android:background="@color/yellowTan"
    />
    <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="3dp"
            android:layout_marginTop="130dp"
            android:layout_marginLeft="70dp"
            android:layout_marginStart="70dp"
    >

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="教發中心回覆:"
                  android:layout_marginTop="120dp"
                  android:layout_marginLeft="50dp"
                  android:layout_marginStart="50dp"
                  android:id="@+id/seeMoreResponseUnderId"/>

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_below="@id/seeMoreResponseUnderId"
                  android:id="@+id/seeMoreResponseTeacher"
                  android:text="文字文字文字文字文字文字文字文字文字文字文字文字文字文字文字文字文字文字文字文字。"
                  android:layout_marginLeft="50dp"
                  android:layout_marginStart="50dp" android:layout_marginTop="5dp"/>

    </RelativeLayout>

</RelativeLayout>