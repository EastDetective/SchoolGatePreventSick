<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent" android:layout_height="match_parent"
        tools:context=".personal.timetable.TimetableFragment"
        android:orientation="vertical"
        android:gravity="center_horizontal">

    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="30dp"
                    android:layout_marginEnd="30dp"
                    android:layout_marginLeft="35dp"
                    android:layout_marginStart="35dp"
    >
        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_alignParentLeft="true"
                      android:layout_alignParentStart="true"
                      android:layout_centerVertical="true"
                      android:orientation="horizontal"
        >
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textStyle="bold"
                      android:textSize="20sp"
                      android:textColor="@color/colorPrimary"
                      android:id="@+id/timetable_month_text"/>

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginLeft="10dp"
                      android:layout_marginStart="10dp"
                      android:textSize="16sp"
                      android:textColor="@color/colorPrimary"
                      android:id="@+id/timetable_year_text"/>
        </LinearLayout>

        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_alignParentRight="true"
                      android:layout_alignParentEnd="true"
                      android:layout_centerVertical="true"
                      android:orientation="horizontal"
        >
            <Button android:layout_width="40dp"
                    android:layout_height="40dp"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:background="@drawable/ic_chevron_left_black_24dp"
                    android:id="@+id/timetable_btn_prev"
            />

            <Button android:layout_width="40dp"
                    android:layout_height="40dp"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:background="@drawable/ic_chevron_right_black_24dp"
                    android:id="@+id/timetable_btn_next"
            />

        </LinearLayout>
    </RelativeLayout>

    <com.prolificinteractive.materialcalendarview.MaterialCalendarView
            android:id="@+id/timetable_calendar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            app:mcv_showOtherDates="other_months"
    />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:focusableInTouchMode="false"
            android:showDividers="beginning"
            android:divider="@drawable/divider_line"
            android:paddingTop="1dp"
            android:dividerPadding="30dp">

        <ListView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/timetable_classList"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"/>
    </LinearLayout>

</LinearLayout>

