<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".school.leave.TakeLeaveFragment">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/fragment_horizontal_padding"
            android:paddingRight="@dimen/fragment_horizontal_padding"
            android:orientation="vertical">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="課程名稱"
                android:textSize="18sp"
                android:layout_marginTop="30dp"
                android:id="@+id/ccc" android:textStyle="bold"/>

        <RelativeLayout android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginLeft="15dp"
                      android:layout_marginStart="15dp"
                      android:layout_centerVertical="true"
                      android:layout_alignParentLeft="true"
                      android:layout_alignParentStart="true"
                      android:text="請選擇課程"
                      android:id="@+id/choseClassTextView"
                      android:elevation="3dp"
                      android:outlineProvider="none"
                      tools:targetApi="lollipop"/>
            <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:paddingRight="20dp"
                    android:paddingEnd="20dp"
                    android:background="@drawable/roll_call_select_gray"
                    android:gravity="end|center_vertical"
                    android:text="▼"
                    android:id="@+id/choseClassBtn"
                    tools:ignore="HardcodedText,RtlSymmetry"/>

        </RelativeLayout>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="請假日期"
                android:textSize="18sp"
                android:layout_marginTop="10dp"
                android:textStyle="bold"/>

        <RelativeLayout android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginLeft="15dp"
                      android:layout_marginStart="15dp"
                      android:layout_centerVertical="true"
                      android:layout_alignParentLeft="true"
                      android:layout_alignParentStart="true"
                      android:text="請選擇日期"
                      android:id="@+id/choseDateTextView"
                      android:elevation="3dp"
                      android:outlineProvider="none"
                      tools:targetApi="lollipop"/>

            <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:paddingRight="20dp"
                    android:paddingEnd="20dp"
                    android:background="@drawable/roll_call_select_gray"
                    android:gravity="end|center_vertical"
                    android:text="▼"
                    android:id="@+id/choseDateBtn"
                    tools:ignore="HardcodedText,RtlSymmetry"/>

        </RelativeLayout>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="請假原因"
                android:textSize="18sp"
                android:textStyle="bold" android:layout_marginBottom="10dp"/>

        <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:orientation="horizontal">

            <RadioButton
                    android:layout_height="match_parent"
                    android:text="病假"
                    android:textSize="14sp"
                    android:layout_weight="1"
                    android:checked="true"
                    android:textAlignment="center"
                    android:button="@null"
                    android:id="@+id/takeLeave_sickRadio"
                    android:background="@drawable/takeleave_radio"
                    android:layout_width="wrap_content"
                    android:layout_marginRight="5dp"/>
            <RadioButton android:layout_width="wrap_content"
                         android:layout_height="match_parent"
                         android:text="事假"
                         android:textSize="14sp"
                         android:layout_weight="1"
                         android:textAlignment="center"
                         android:button="@null"
                         android:id="@+id/takeLeave_somethingRadio"
                         android:background="@drawable/takeleave_radio"
                         android:layout_marginRight="5dp"/>
            <RadioButton android:layout_width="wrap_content"
                         android:layout_height="match_parent"
                         android:text="公假"
                         android:button="@null"
                         android:textSize="14sp"
                         android:id="@+id/takeLeave_publicRadio"
                         android:textAlignment="center"
                         android:background="@drawable/takeleave_radio"
                         android:layout_weight="1"
                         android:layout_marginRight="5dp"/>
            <RadioButton android:layout_width="wrap_content"
                         android:layout_height="match_parent"
                         android:layout_weight="1"
                         android:text="其他"
                         android:id="@+id/takeLeave_otherRadio"
                         android:button="@null"
                         android:textSize="14sp"
                         android:textAlignment="center"
                         android:background="@drawable/takeleave_radio"
            />
        </RadioGroup>

        <EditText android:layout_width="match_parent"
                  android:layout_height="250dp"
                  android:layout_marginTop="15dp"
                  android:layout_marginBottom="10dp"
                  android:hint="請寫下請假說明，限150字內．"
                  android:id="@+id/textTakeLeave"
                  android:maxLength="150"
                  android:background="@drawable/input_edit_round"
                  android:gravity="top"
                  android:padding="15dp" android:textSize="11sp"/>
        <Button android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="確定送出"
                android:layout_gravity="center"
                android:id="@+id/sendTakeLeaveBtn"
                android:background="@drawable/btn_capsule"
                android:layout_marginBottom="20dp"/>


    </LinearLayout>
</ScrollView>